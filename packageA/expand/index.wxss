/* pages/pageCharts//expand/index.wxss */
.bg-img {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}
.cu-card>.cu-item.shadow-blur {
    overflow: initial;
}
.cu-card>.cu-item {
    display: block;
    background-color: #ffffff;
    overflow: hidden;
    border-radius: 10rpx;
    margin: 30rpx;
    height: 232rpx;
}
.cardTitle {
    color: #fff;
    padding: 90rpx 60rpx;
    font-size: 40rpx;
    font-weight: 300;
    transform: skew(-10deg, 0deg);
    position: relative;
    text-shadow: 0px 0px 6rpx rgba(0,0,0,0.3);

}
.cardTitle::before {
    content: "";
    position: absolute;
    width: 60rpx;
    height: 6rpx;
    border-radius: 20rpx;
    background-color: #fff;
    display: block;
    top: 60rpx;
    left: 50rpx;
    transform: skew(10deg, 0deg);

}

.shadow-blur {
    position: relative;
}

.shadow-blur::before {
    content: "";
    display: block;
    background: inherit;
    filter: blur(10rpx);
    position: absolute;
    width: 100%;
    height: 100%;
    top: 10rpx;
    left: 10rpx;
    z-index: -1;
    opacity: 0.4;
    transform-origin: 0 0;
    border-radius: inherit;
    transform: scale(1, 1);
}
