/* packageA/expand/verticalnav/verticalnav.wxss */
page {
	display: flex;
	flex-direction: column;
	width: 100%;
    height: 100%;
    overflow: hidden;
}

.navigationbar {
    position: absolute;
    width:100%;
    top:0;
    left:0;
}
.swiperList {
	width: 100%;
	height: 320rpx;
}
.swiperList image {
	width: 100%;
	height: 100%;
}

.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
  box-sizing: border-box;

}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
}
.VerticalMain{
  background-color: #f1f1f1;
}