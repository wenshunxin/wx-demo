/* packageB/component/location/location.wxss */
.container{
    position: relative;
}
#maps{
    width:100%;
    height: 100%;
}
.cover-view{
    width: 100%;
    position: fixed;
    top: 0;
    padding: 30rpx;
    box-sizing: border-box;
}
.cover-content{
    width:100%;
    background: rgba(255,255,255,.94);
    border-radius: 14rpx;
    display: flex;
    flex-direction: column;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}
.cover-item{
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}
.badge{
    height: 16rpx;
    width: 16rpx;
    border-radius: 8rpx;
    background: #5677fc;
    margin-right: 20rpx;
}
.orange {
    background: #ff7900 !important;
}
.cover-image{
    height: 60rpx;
    width: 60rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    margin-top: -30rpx;
    margin-left: -30rpx;
}